<!-- 个人中心页面 - 优化版 -->
<view class="page">
  <!-- 未登录状态 -->
  <view wx:if="{{!isLoggedIn}}" class="login-section">
    <button 
      class="login-btn"
      open-type="getUserInfo"
      bindgetuserinfo="onGetUserInfo"
    >
      微信登录
    </button>
    <view class="login-tip">请先登录以管理您的资料</view>
  </view>

  <!-- 已登录状态 -->
  <view wx:else class="user-section">
    <!-- 用户信息头部 -->
    <view class="user-header">
      <image class="avatar" src="{{userInfo.avatarUrl}}"></image>
      <text class="nickname">{{userInfo.nickName}}</text>
    </view>

    <!-- 资料编辑表单 -->
    <view class="form-section">
      <view class="form-item">
        <text class="label">用户名</text>
        <input 
          class="input"
          value="{{userInfo.nickName}}"
          placeholder="请输入用户名"
          bindinput="updateNickName"
        />
      </view>

      <view class="form-item">
        <text class="label">手机号</text>
        <input 
          class="input"
          type="number"
          value="{{userInfo.phone}}"
          placeholder="请输入手机号"
          bindinput="updatePhoneNumber"
        />
        <button 
          class="mini-btn"
          open-type="getPhoneNumber"
          bindgetphonenumber="getPhoneNumber"
        >
          微信授权
        </button>
      </view>

      <view class="form-item">
        <text class="label">收货地址</text>
        <input 
          class="input"
          value="{{userInfo.address}}"
          placeholder="请选择地址"
          disabled
        />
        <button 
          class="mini-btn"
          bindtap="chooseAddress"
        >
          选择地址
        </button>
      </view>

      <button class="submit-btn" bindtap="saveProfile">保存资料</button>
    </view>
  </view>
</view>